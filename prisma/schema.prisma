generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member{
  memberId String @id @default(uuid())
  name String
  email String @unique
  phone String
  membershipDate DateTime
  createdAt DateTime @default(now())

  brrowRecord BrrowRecord[]
  @@map("members")
}

model Book{
  bookId String @id @default(uuid())
  title String
  genre String
  publishedYear Int
  totalCoppies Int
  availableCoppies Int

  brrowRecord BrrowRecord[]
  @@map("books")
}

model BrrowRecord{
  brrowId String @id @default(uuid())
  brrowDate DateTime @default(now())
  returnDate DateTime?
  bookId String
  memberId String
  updatedAt DateTime @updatedAt

  book Book @relation(fields: [bookId], references: [bookId])
  member Member @relation(fields: [memberId], references: [memberId])
  @@map("brrowrecords")
}